<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-header">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="logo-wrapper">
                    <div class="logo">
                        <a href="@Url.Action("Index", "Medic")">
                            <img src="@Url.Content("~/fonts/Logo-ISS.png")" class="logo-iss" />
                        </a>
                    </div>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Lista Pacienti", "Pacienti", "Medic")</li>
                    <li>@Html.ActionLink("Creaza cerere noua", "CerereSange", "Medic")</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Operator")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="wrapper-container">
        <div class="container background-white full-height-container">
            @RenderBody()
        </div>
    </div>

    <footer>
        <div class="footer-wrapper">
            <div class="footer">
                <p class="text-center margin-0">&copy; ISS</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/register.js")
    @RenderSection("scripts", required: false)
</body>
</html>
